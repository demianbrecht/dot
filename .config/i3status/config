general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "tztime local"

wireless wlp2s0 {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S %Z"
    timezone = "America/Vancouver"
}

load {
    format = "%5min"
}
